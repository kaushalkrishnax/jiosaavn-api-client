{
  "name": "jiosaavn-api-client",
  "version": "2.0.0",
  "description": "Complete, type-safe TypeScript client for the JioSaavn API. Supports search, songs, albums, artists, playlists, trending, and modules. Works on Node, Bun, Cloudflare Workers, Vercel Edge, and Deno.",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "test": "vitest",
    "test:run": "vitest run",
    "test:schema": "bun run tests/ --only-schema",
    "test:api": "bun run --watch tests/api/server",
    "prettier": "prettier --write ."
  },
  "keywords": [
    "jiosaavn",
    "saavn",
    "music",
    "api",
    "client",
    "typescript",
    "edge",
    "cloudflare-workers",
    "vercel-edge",
    "bun",
    "deno",
    "streaming",
    "download",
    "songs",
    "albums",
    "artists",
    "playlists",
    "trending"
  ],
  "author": "Kaushal Krishna <kaushalkrishnax@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kaushalkrishnax/jiosaavn-api-client.git"
  },
  "bugs": {
    "url": "https://github.com/kaushalkrishnax/jiosaavn-api-client/issues"
  },
  "homepage": "https://github.com/kaushalkrishnax/jiosaavn-api-client#readme",
  "dependencies": {
    "crypto-js": "^4.2.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/crypto-js": "^4.2.2",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
